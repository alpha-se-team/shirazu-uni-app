<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:openDrawer="end">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@color/dark_blue"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/page_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="70dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="اطلاعات کاربر"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="0.1"
                android:padding="20dp"
                android:src="@drawable/menu" />
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="16dp"
                    android:text="تاریخ"
                    android:textColor="@color/dark_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/remaining_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="زمان باقی مانده"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/remaining_days_progress_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.825"
                    app:layout_constraintStart_toEndOf="@+id/remaining_days_text_view"
                    app:layout_constraintTop_toBottomOf="@+id/date_view"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/remaining_days_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="5dp"
                    android:text="روز"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/remaining_days_progress_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/date_view"
                    app:layout_constraintVertical_bias="1.0" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/remaining_days_progress_bar"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="80dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.508"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/date_view"
                    app:rcBackgroundColor="@color/grey"
                    app:rcBackgroundPadding="3dp"
                    app:rcMax="30"
                    app:rcProgress="20"
                    app:rcProgressColor="@color/pink"
                    app:rcRadius="100dp"
                    app:rcReverse="true" />


                <TextView
                    android:id="@+id/remaining_credit_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="حجم باقی مانده"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/remaining_traffic_progress_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.801"
                    app:layout_constraintStart_toEndOf="@+id/remaining_traffic_text_view"
                    app:layout_constraintTop_toBottomOf="@+id/remaining_days_progress_bar"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/remaining_traffic_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="5dp"
                    android:text="گیگابایت"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/remaining_traffic_progress_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/remaining_days_progress_bar"
                    app:layout_constraintVertical_bias="1.0" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/remaining_traffic_progress_bar"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/remaining_days_progress_bar"
                    app:rcBackgroundColor="@color/grey"
                    app:rcBackgroundPadding="3dp"
                    app:rcMax="12"
                    app:rcProgress="6"
                    app:rcProgressColor="@color/light_blue"
                    app:rcRadius="100dp"
                    app:rcReverse="true" />

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/remaining_traffic_progress_bar"
                    app:layout_constraintVertical_bias="0.26">

                    <LinearLayout
                        android:id="@+id/charge_info_table"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/first_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:background="@drawable/top_round_view_2"
                            android:gravity="center"
                            android:text="نحوه شارژ"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/second_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/charge_amount_per_month"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@drawable/margin_blue_2"
                                android:gravity="center"
                                android:text="12 گیگابایت"
                                android:textColor="@color/dark_blue" />

                            <TextView
                                android:id="@+id/second_row_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@drawable/margin_blue_2"
                                android:gravity="center"
                                android:text="میزان تغییر شارژ در هر ماه"
                                android:textColor="@color/dark_blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/third_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/recharge_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@drawable/margin_blue_2_light"
                                android:gravity="center"
                                android:text="1398/3/1"
                                android:textColor="@color/dark_blue" />

                            <TextView
                                android:id="@+id/third_row_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@drawable/margin_blue_2_light"
                                android:gravity="center"
                                android:text="تاریخ شارژ مجدد"
                                android:textColor="@color/dark_blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fourth_row"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/expiration_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@drawable/margin_blue_2"
                                android:gravity="center"
                                android:text="1401/6/17"
                                android:textColor="@color/dark_blue" />

                            <TextView
                                android:id="@+id/forth_row_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@drawable/margin_blue_2"
                                android:gravity="center"
                                android:text="تاریخ انقضاء اعتبار کاربر"
                                android:textColor="@color/dark_blue" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/time_to_update_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:background="@drawable/bottom_round_view_2"
                            android:gravity="center"
                            android:text="بروزرسانی در 1 دقیقه"
                            android:textColor="@color/dark_blue" />
                    </LinearLayout>

                </FrameLayout>

                <Button
                    android:id="@+id/disconnect_button"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_button"
                    android:text="قطع ارتباط"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayout" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.constraint.ConstraintLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:gravity="end"
        android:layoutDirection="rtl"
        android:theme="@style/NavigationView"
        app:headerLayout="@layout/nav_header_account_info"
        app:itemTextColor="@color/dark_blue"
        app:menu="@menu/account_info">

        <LinearLayout
            android:id="@+id/logout_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/red">

            <ImageView
                android:id="@+id/logout_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/logout" />

            <TextView
                android:id="@+id/logout_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:text="خروج"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>

